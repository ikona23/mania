<!--This is sign up page-->

<h2>Sign up</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    <!--create form in registration path in put in placeholder f-->
    <%= f.error_notification %>
    <!--crate input fields-->
    <br/>
    Want to order  <%= f.check_box :is_customer %><br/>
    Want to offer <%= f.check_box :is_vendor  %>
    <br/><br/>
  <%= display_base_errors resource %>
    <!--<%= f.input :username, :autofocus => true %>-->
    <%= f.input :name %>
    <!--autofocus - focus on field after refresh-->

    <%= f.input :email, :required => true %>
  <%= f.input :password, :required => true %>
  <%= f.input :password_confirmation, :required => true %>

  <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
<% end %>
<%= render "devise/shared/links" %>
